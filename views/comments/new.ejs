<% include ../partials/header %>

<div class="container">
    
    <div class="row"> 
    
        <div class="myform">
            <h3>Leave a review/comment to <%= gem.name %></h3>
    
            <form action="/gems/<%=gem._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" type="text" class="form-control" placeholder="Leave a review" rows="7"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-success btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/gems/<%=gem._id%>" class="btn btn-large btn-info btn-block">Back to Gem</a>
        </div>
        
    </div>
        
</div>

<% include ../partials/footer %>