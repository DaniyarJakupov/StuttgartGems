<% include ../partials/header %>

<div class="container">
    
    <div class="row"> 
    
        <div class="myform">
            <h1>Edit Your Gem</h1>
    
            <form action="/gems/<%=gem._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input name="gem[name]" type="text" value="<%=gem.name%>" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">Image URL</label>
                    <input name="gem[image]" type="text" value="<%=gem.image%>" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <textarea name="gem[description]" class="form-control" rows="7"><%=gem.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-success btn-block">Update</button>
                </div>
            </form>
            
            <a href="/gems/<%=gem._id%>" class="btn btn-large btn-info btn-block">Cancel</a>
        </div>
        
    </div>
        
</div>

<% include ../partials/footer %>